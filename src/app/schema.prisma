generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Task {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  description String
}

model Habit {
  id   Int    @id @default(autoincrement())
  name String
}

model HabitConstraint {
  id     Int    @id @default(autoincrement())
  prompt String
  value  String
}
