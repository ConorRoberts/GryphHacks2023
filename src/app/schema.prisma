generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Task {
  id          Int      @id @default(autoincrement())
  startTime   DateTime @default(now())
  description String
  isComplete  Boolean  @default(false)
  duration    Int
}

model Habit {
  id        Int      @id @default(autoincrement())
  name      String
  timeframe DateTime
}

model HabitConstraint {
  id     Int    @id @default(autoincrement())
  prompt String
  value  String
}
